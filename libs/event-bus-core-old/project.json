{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/event-bus-core-old/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/event-bus-core-old",
        "main": "libs/event-bus-core-old/src/index.ts",
        "tsConfig": "libs/event-bus-core-old/tsconfig.lib.json",
        "assets": ["libs/event-bus-core-old/*.md"],
        "skipTypeCheck": true
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs event-bus-core {args.v} {args.tag}"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        }
      ]
    },
    "deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm publish --access public --otp={args.otp} dist/libs/event-bus-core-old"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        }
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/event-bus-core-old/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/event-bus-core-old"],
      "options": {
        "jestConfig": "libs/event-bus-core-old/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "cwd": "libs/event-bus-core-old",
        "command": "tsc --noEmit src/index.ts"
      }
    }
  },
  "tags": ["type:lib", "project:event-bus-core"]
}
